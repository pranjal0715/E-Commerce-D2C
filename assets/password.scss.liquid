@import '{{ "bootstrap.min.css" | asset_url }}';
@import '{{ "vendor.css" | asset_url }}';

{%- assign font-family-base = settings.font-family-base | default: 'Arial' -%}
{%- assign font-family-second = settings.font-family-second | default: 'Arial' -%}
{%- assign font-family-base_bold = font-family-base | font_modify: 'weight', 'bolder' -%}
{%- assign font-family-base_italic = font-family-base | font_modify: 'style', 'italic' -%}
{%- assign font-family-base_bold_italic = font-family-base_bold | font_modify: 'style', 'italic' -%}
{%- assign font-family-second_bold = font-family-second | font_modify: 'weight', 'bolder' -%}
{%- assign font-family-second_medium = font-family-second | font_modify: 'weight', '500' -%}

$blue: #007bff;
$indigo: #6610f2;
$purple: #6f42c1;
$pink: #e83e8c;
$red: #f00;
$orange: #fd7e14;
$yellow: #ffc107;
$green: #28a745;
$teal: #20c997;
$cyan: #17a2b8;
$white: #fff;
$black: #000;
$gray: #6c757d;
$gray-dark: #343a40;
$nocolor: transparent;
$error: #dc3545;
$shadow: 0px 6px 15px rgba(0, 0, 0, .12);

$theme-color: {{ settings.theme-color }};
$secondary: {{ settings.color_secondary }};
$text-color: {{ settings.text-color }};
$body-bg: {{ settings.color_body_bg }};
$border-color: {{ settings.color_border }};

$header-bg: {{ settings.color_header_bg }};
$footer-color: {{ settings.color_footer_text }};

$menu-color: {{ settings.color_menu_text }};
$menu-hover-color: {{ settings.color_menu_text_hover }};
$menu-dropdown-bg: {{ settings.color_submenu_bg }};
$menu-dropdown-color: {{ settings.color_submenu_text }};
$menu-dropdown-hover-color: {{ settings.color_submenu_text_hover }};
$menu-dropdown-shadow: $shadow;
$font-family-second: {{ font-family-second }};
$heading-font-weight: {{ font-family-second.weight | default: 'normal' }};
$heading-font-weight-bold: {{ font-family-second_bold.weight | default: 600 }};
$heading-font-weight-medium: {{ font-family-second_medium.weight | default: 500 }};
$font-family-base: {{ font-family-base }};
$body-font-weight: {{ font-family-base.weight | default: 'normal' }};
$body-font-weight-bold: {{ font-family-base_bold.weight | default: 600 }};
$body-font-style: {{ font-family-base.style| default: 'normal' }};
$font-size-base: {{ settings.font-size-base | append: 'px' }};

$font-family: $font-family-base;
$font-size: $font-size-base;
$text-color: $text-color;
$color-blankstate: rgba($text-color, .35);
$color-blankstate-background: rgba($text-color, .10);
$sold-out: #d62122;
$star-empty-color: #444;
$star-color: #f7bc3d;
$qoutations-color: rgba(237, 29, 36, .1);
$toast-error-bg: #ff3547;
$overlay-black: rgba(0, 0, 0, .4);
$overlay-white: rgba(255, 255, 255, .4);

$password-color: #fff;
$password-bg: #444;

$font-icon: 'FontAwesome';

$gutter-width: 30px;

// OVERRIDE BOOTSTRAP
body {
  color: $text-color;
  background-color: $body-bg;
  font-family: $font-family;
  font-size: $font-size;
  font-weight: $body-font-weight;
  font-style: $body-font-style;
}

.h1,
.h2,
.h3,
.h4,
.h5,
.h6,
h1,
h2,
h3,
h4,
h5,
h6 {
  font-family: $font-family-second;
  font-weight: $heading-font-weight-bold;
}

a {
  &:hover,
  &:focus {
    outline: 0;
  }
}

.container {
  @media (min-width: 768px) {
    max-width: 100%;
  }

  @media (min-width: 1550px) {
    max-width: 1530px;
  }

  @media (min-width: 1200px) {
    padding-left: $gutter-width;
    padding-right: $gutter-width;
  }
}

.container-fluid {
  @media (min-width: 1200px) {
    padding-left: $gutter-width;
    padding-right: $gutter-width;
  }
}

.btn {
  display: block;
  padding: 10px 30px;
  border-radius: 0;
  font-family: $font-family-second;
  font-size: $font-size;
  font-weight: $heading-font-weight-medium;
  text-transform: uppercase;
  transition: all .3s ease;
}

.btn-primary {
  color: $white;
  background-color: $theme-color;
  border: 1px solid $theme-color;

  &:hover,
  &:active,
  &:focus {
    color: $white;
    background-color: darken($theme-color, 5%);
    border-color: darken($theme-color, 5%);
  }
}

.btn-secondary {
  color: $gray-dark;
  background-color: $white;
  border: 1px solid $border-color;

  &:hover,
  &:active,
  &:focus {
    color: $gray-dark;
    background-color: $border-color;
    border-color: $border-color;
  }
}

.form-control {
  height: 44px;
  border-radius: 0;
  padding: 11px 20px 12px;
  color: $text-color;
  font-family: $font-family;
  font-size: $font-size;
  line-height: 20px;

  &:focus {
    border-color: $gray-dark;
    box-shadow: none;
  }
}

.table {
  color: $text-color;
}

.alert {
  border-radius: 0;
}

// HEADER LOGO

.header-logo {
  display: flex;
  align-items: center;
  justify-content: center;
}

.header-logo__link {
  display: block;
}

.header-logo__link--text {
  color: $menu-color;
  font-size: 20px;
  font-weight: bold;
  text-transform: uppercase;

  &:hover {
    color: $menu-color;
    text-decoration: none;
  }
}

.header-logo__img {
  display: block;
}

.template-password {
  height: 100vh;
}

.password-page__container {
  width: 100%;
  height: 100%;
}

.password-page__wrapper {
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
  width: 100%;
  min-height: 100vh;
  padding: 30px;
  color: $password-color;
  background-color: $password-bg;
  background-size: cover;
  background-repeat: no-repeat;
  text-align: center;
}

.password-page__header,
.password-page__main,
.password-page__footer {
  width: 100%;
}

.password-login {
  margin: 0 0 50px;
  text-align: right;

  @media screen and (max-width: 767px) {
    text-align: center;
  }
}

.password-login__link {
  color: $password-color;
  font-size: $font-size - 1;
  font-weight: bold;
  text-transform: uppercase;
  transition: color .3s ease;

  .fa {
    margin-right: 4px;
  }

  &:hover {
    color: $theme-color;
    text-decoration: none;
  }
}

.password-page__main-inner {
  padding: 15px 0;
}

.password-page__hero {
  margin: 0 0 0.6em;
  font-family: $font-family-second;
  font-size: 4em;
  font-weight: $heading-font-weight-bold;
  line-height: 1.25;
}

.password-page__signup-form-heading {
  margin: 0 0 0.5em;
  font-weight: $heading-font-weight-medium;
  letter-spacing: 0.1em;
  text-transform: uppercase;
  text-rendering: optimizeLegibility;
}

.password-page__signup-form-subheading {
  font-style: italic;
}

.password-page__signup-form {
  max-width: 440px;
  margin: 0 auto;

  .form-group {
    position: relative;
    display: flex;
    padding: 20px 0 40px;
  }

  .form-group__input {
    border: none;
  }

  .form-group__btn {
    padding: 12px 30px;
    color: $white;
    background-color: $black;
    border: none;
    line-height: 20px;
  }
}

.password-page__signup-form-heading {
  font-family: $font-family-second;
  font-weight: $heading-font-weight-medium;
}

.social-sharing {
  padding: 5px 0 15px;

  a {
    display: inline-block;
    color: $white;
    border-radius: 2px;
    margin: 0 20px 0 0;
    height: 22px;
    line-height: 22px;
    text-decoration: none;
  }

  span {
    display: inline-block;
    vertical-align: top;
    height: 22px;
    line-height: 22px;
    font-size: $font-size - 2;
  }

  .fa {
    padding: 0 5px 0 0;
    font-size: $font-size;

    &:before {
      line-height: 22px;
    }
  }
}

.password-page__footer_inner {
  padding: 30px 0;
  font-size: 95%;
  line-height: 24px;
}

.shopify-logo-svg {
  width: 82.28571px;
  height: 24px;
  display: inline-block;
  line-height: 0;
  fill: currentColor;
  vertical-align: top;
}

.shopify-name {
  clip: rect(0 0 0 0);
  clip: rect(0, 0, 0, 0);
  overflow: hidden;
  position: absolute;
  height: 1px;
  width: 1px;
}

.password-page__login-form {
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  flex-flow: row wrap;
  align-items: center;
  justify-content: center;
  width: 100vw;
  height: 100vh;
  padding: 30px;
  color: $text-color;
  background-color: $body-bg;
  opacity: 0;
  visibility: hidden;
  transition: all .3s cubic-bezier(0.46, 0.01, 0.32, 1);

  .h4 {
    margin: 0 0 25px;
    color: $gray-dark;
    font-weight: $heading-font-weight-medium;
    text-transform: uppercase;
  }

  .text-link {
    color: $theme-color;
  }

  .form-group__input {
    background-color: lighten($border-color, 3%);
  }
}

.password-page__login-form-inner {
  width: 100%;
  max-width: 500px;
  margin: 0 auto;

  .form-group {
    padding: 0 0 20px;
  }
}

.errors {
  margin: 0 0 20px;
  padding: 10px 15px;
  color: $error;
  border: 1px solid $error;
  background-color: rgba($error, .1);

  ul {
    margin: 0;
    padding-left: 0;
    list-style: none;

    li {
      padding: 2px 0;
    }
  }
}

.password-page__login-form-close {
  position: absolute;
  top: 30px;
  right: 50px;
  display: block;
  color: $gray-dark;
  width: 44px;
  height: 44px;
  padding: 5px;
  transition: color .3s ease;

  svg {
    display: block;
    width: 100%;
    height: 100%;
    fill: currentColor;
  }

  &:hover {
    color: $theme-color;
  }
}

.login-modal--open {
  .password-page__login-form {
    opacity: 1;
    visibility: visible;
  }
}
