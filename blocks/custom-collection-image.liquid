{%- style -%}
    #shopify-section-{{ section.id }} .wpbingo-widget--collections-image .collection-item__title a{
        font-size: {{ block.settings.font_size }}px;
        line-height: {{ block.settings.line_height }}px;
        font-weight: {{ block.settings.font_weight }};
        padding:{{ block.settings.padding_title }};
        letter-spacing:{{ block.settings.letter_spacing }}px;
        color:{{ block.settings.color }};
        background-color:{{ block.settings.background }};
        text-transform:{{ block.settings.text_transform }};
        font-family:var({{ block.settings.font }});
    }
    #shopify-section-{{ section.id }} .wpbingo-widget--collections-image .collection-item__title{
        text-align:{{ block.settings.text_align }};
    }
    #shopify-section-{{ section.id }} .wpbingo-widget--collections-image .collection-item__image a{
        border-radius: {{ block.settings.border_image }};
        display:inline-block;
        overflow:hidden;
    }
    #shopify-section-{{ section.id }} .wpbingo-widget--collections-image .collection-item__image a img{
        border-radius: {{ block.settings.border_image }};
    }
    #shopify-section-{{ section.id }} .wpbingo-widget--collections-image .collection-item__title a:hover{
        color:{{ block.settings.color_hover }};
        background-color:{{ block.settings.background_hover }};
    }
    @media(max-width:767px){
        #shopify-section-{{ section.id }} .wpbingo-widget--collections-image .collection-item__title a{
            font-size: {{ block.settings.font_size_mobi }}px;
            line-height: {{ block.settings.line_height_mobi }}px;
            font-weight: {{ block.settings.font_weight_mobi }};
            letter-spacing:{{ block.settings.letter_spacing_mobi }}px;
            padding:{{ block.settings.padding_title_mobi }};
        }
    }
{%- endstyle -%}
