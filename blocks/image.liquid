{% assign margin 			= block.settings.margin | split: "|" %}
{% assign padding 			= block.settings.padding | split: "|" %}
<style>
  #shopify-block-{{ block.id }} .bwp-block-image{
    text-align:{{ block.settings.align }};
  }
   #shopify-block-{{ block.id }} .bwp-block-image .image img{
      object-fit:{{ block.settings.image_size }};
      object-position:{{ block.settings.image_pos }};
      overflow:hidden;
      border-radius:{{ block.settings.border_radius }};
	  max-width:{{ block.settings.size }};
      {%- if block.settings.border -%}
            border-width:{{ block.settings.border_width }};
            border-color:{{ block.settings.border_color }};
            border-style:solid;
      {%- endif -%}
   }
   {%- if margin[0] != blank or padding[0] != blank -%}
		#shopify-block-{{ block.id }} .bwp-block-image{
			{%- if margin[0] != blank -%}margin: {{ margin[0] }};{%- endif -%}
			{%- if padding[0] != blank -%}padding:{{ padding[0] }};{%- endif -%}
		}
	{%- endif -%}
	{%- if margin[1] != blank or padding[1] != blank -%}
		@media (max-width:1199px){
			#shopify-block-{{ block.id }} .bwp-block-image{
				{%- if margin[1] != blank -%}margin: {{ margin[1] }};{%- endif -%}
				{%- if padding[1] != blank -%}padding:{{ padding[1] }};{%- endif -%}
			}
		}
	{%- endif -%}
	{%- if margin[2] != blank or padding[2] != blank -%}
		@media (max-width:991px){
			#shopify-block-{{ block.id }} .bwp-block-image{
				{%- if margin[2] != blank -%}margin: {{ margin[2] }};{%- endif -%}
				{%- if padding[2] != blank -%}padding:{{ padding[2] }};{%- endif -%}
			}
		}
	{%- endif -%}
	{%- if margin[3] != blank or padding[3] != blank -%}
		@media (max-width:767px){
			#shopify-block-{{ block.id }} .bwp-block-image{
				{%- if margin[3] != blank -%}margin: {{ margin[3] }};{%- endif -%}
				{%- if padding[3] != blank -%}padding:{{ padding[3] }};{%- endif -%}
			}
		}
	{%- endif -%}
   @media (max-width:767px){
	#shopify-block-{{ block.id }} .bwp-block-image{
    text-align:{{ block.settings.align_mobi }};
  }
   }
</style>
<div class="bwp-block-image bwp-effect-{{ block.settings.effect }} overflow-hidden">
    <div class="image image-effect">
        {%- if block.settings.image -%}
			{%- if block.settings.url -%}
				<a href="{{block.settings.url}}"><img class="lazyload fade-in" src="{{ block.settings.image | image_url:width:1200 }}" alt="{{ block.settings.image.alt }}" width="{{ block.settings.image.width }}" height="{{ block.settings.image.height }}" /></a>
			{%- else -%}
				<img class="lazyload fade-in" src="{{ block.settings.image | image_url:width:1200 }}" alt="{{ block.settings.image.alt }}" width="{{ block.settings.image.width }}" height="{{ block.settings.image.height }}" />
			{%- endif -%}
        {%- else -%}
            <img class="lazyload fade-in" src="{{ 'placeholder.svg' | asset_url }}" alt="image demo"  width="auto" height="auto" />
        {%- endif -%}
    </div>
</div>
