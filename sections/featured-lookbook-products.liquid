{{ 'css-section-lookbook-products.css' | asset_url | stylesheet_tag }}
{{ 'css-section-lookbook-intagram.css' | asset_url | stylesheet_tag }}
{%- if section.settings.fullwidth -%}
	{%- assign container = 'container-full' -%}
{%- elsif section.settings.max_width != blank -%}
	{%- assign container = 'bwp-container' -%}
{%- else -%}
	{%- assign container = 'container' -%}
{%- endif -%}

{%- assign max_width = '' -%}
{%- if section.settings.fullwidth == blank and section.settings.max_width != blank -%}
	{%- assign width_container = section.settings.max_width | plus: 0 -%}
	{%- capture max_width -%}style="max-width: {{ section.settings.max_width }};"{%- endcapture -%}
{%- endif -%}

{%- assign margin = '' -%}
{%- if section.settings.margin != blank -%}
  {%- capture margin -%}margin: {{ section.settings.margin }};{%- endcapture -%}
{%- endif -%}
{% assign margin 			= section.settings.margin | split: "|" %}
{% assign padding 			= section.settings.padding | split: "|" %}

{%- assign collection_handle = section.settings.featured_products -%}
{%- assign nav = section.settings.navigation -%}
{%- assign dot = section.settings.dots -%}
{%- assign infinite = section.settings.infinite -%}
{%- assign autoplay = section.settings.autoplay -%}
{%- assign autoplay_speed = section.settings.autoplay_speed | escape -%}
{%- assign columns = section.settings.columns -%}
{%- assign column1440 = section.settings.column1440 -%}
{%- assign column1 = section.settings.column1 -%}
{%- assign column2 = section.settings.column2 -%}
{%- assign column3 = section.settings.column3 -%}
{%- assign column4 = section.settings.column4 -%}
{%- assign limit = section.settings.limit | plus: 0 -%}

{%- style -%}
	{%- if section.settings.fullwidth == blank and section.settings.max_width != blank and width_container > 1200 -%}
		@media (max-width: {{ section.settings.max_width }}) and (min-width: 1200px){
			#shopify-section-{{ section.id }} .bwp-container{
				padding-left:30px;
				padding-right:30px;
			}
		}
	{%- endif -%}
	{%- if margin[0] != blank or padding[0] != blank -%}
		#shopify-section-{{ section.id }} .wpbingo-section--lookbook{
			{%- if margin[0] != blank -%}margin: {{ margin[0] }};{%- endif -%}
			{%- if padding[0] != blank -%}padding:{{ padding[0] }};{%- endif -%}
		}
	{%- endif -%}
	{%- if margin[1] != blank or padding[1] != blank -%}
		@media (max-width:1200px){
			#shopify-section-{{ section.id }} .wpbingo-section--lookbook{
				{%- if margin[1] != blank -%}margin: {{ margin[1] }};{%- endif -%}
				{%- if padding[1] != blank -%}padding:{{ padding[1] }};{%- endif -%}
			}
		}
	{%- endif -%}
	{%- if margin[2] != blank or padding[2] != blank -%}
		@media (max-width:991px){
			#shopify-section-{{ section.id }} .wpbingo-section--lookbook{
				{%- if margin[2] != blank -%}margin: {{ margin[2] }};{%- endif -%}
				{%- if padding[2] != blank -%}padding:{{ padding[2] }};{%- endif -%}
			}
		}
	{%- endif -%}
	{%- if margin[3] != blank or padding[3] != blank -%}
		@media (max-width:767px){
			#shopify-section-{{ section.id }} .wpbingo-section--lookbook{
				{%- if margin[3] != blank -%}margin: {{ margin[3] }};{%- endif -%}
				{%- if padding[3] != blank -%}padding:{{ padding[3] }};{%- endif -%}
			}
		}
	{%- endif -%}
    {%- if section.blocks.size > 0 -%}
		{%- for block in section.blocks -%}
			{%- if block.type == 'css' -%}
				#shopify-section-{{ section.id }} .lookbook-products .title-banner{
					font-size: {{ block.settings.font_size_title }}px;
					line-height: {{ block.settings.line_height_title }}px;
					font-weight: {{ block.settings.font_weight_title }};
					letter-spacing:{{ block.settings.letter_spacing_title }}px;
					color:{{ block.settings.color_title }};
					margin:{{ block.settings.margin_title }};
				}
				#shopify-section-{{ section.id }} .lookbook-products .desc-banner{
					font-size: {{ block.settings.font_size_desc }}px;
					line-height: {{ block.settings.line_height_desc }}px;
					color:{{ block.settings.color_desc }};
					margin:{{ block.settings.margin_desc }};
				}
				@media(max-width:767px){
					#shopify-section-{{ section.id }} .lookbook-products .title-banner{
						font-size: {{ block.settings.font_size_title_mobi }}px;
						line-height: {{ block.settings.line_height_title_mobi }}px;
						margin:{{ block.settings.margin_title_mobi }};
					}
					#shopify-section-{{ section.id }} .lookbook-products .desc-banner{
						font-size: {{ block.settings.font_size_desc_mobi }}px;
						line-height: {{ block.settings.line_height_desc_mobi }}px;
						margin:{{ block.settings.margin_desc_mobi }};
					}
				}
			{%- endif -%}
		{%- endfor -%}
	{%- endif -%}
{%- endstyle -%}
<section class="wpbingo-section wpbingo-section--lookbook lookbook-products wpbingo-section--{{ section.id }}" data-id="{{ section.id }}">
	<div class="{{ container }}" {{ max_width }}>
		<div class="wpbingo-section__inner">
			<div class="wpbingo-lookbook__contents">
                <div class="col-product">
                    <div class="content-product">
                        <div class="heading-product">
                            {%- if section.settings.title -%}<h2 class="title-banner">{{ section.settings.title }}</h2>{%- endif -%}
                            {%- if section.settings.desc -%}<div class="desc-banner">{{ section.settings.desc }}</div>{%- endif -%}
                        </div>
                        <div class="wpbingo-section__content bwp_slider-carousel{% if section.settings.half_slider != blank %} bwp_slick-margin-mobile{% endif %}">
                            {%- if collection_handle == blank or collections[collection_handle] == empty or collections[collection_handle].products_count == 0 -%}
                                <div class="row">
                                    {% include 'onboarding-featured-products' %}
                                </div>
                            {%- else -%}
                                <div class="js-carousel slick-carousel" data-nav="{{ nav }}" data-dots="{{ dot }}" data-slidesToScroll="true" data-infinite="{{ infinite }}" data-autoplay="{{ autoplay }}"
                                    data-autoplayspeed="{{ autoplay_speed }}"
                                    data-columns="{{ columns }}"
                                    data-column1440="{{ column1440 }}"
                                    data-column1="{{ column1 }}"
                                    data-column2="{{ column2 }}"
                                    data-column3="{{ column3 }}"
                                    data-column4="{{ column4 }}">
                                    {%- for product in collections[collection_handle].products limit: limit -%}
                                        <div class="slick-carousel__item">
                                            {% include 'product-grid-item' %}
                                        </div>
                                    {%- endfor -%}
                                </div>
                            {%- endif -%}
                        </div>   
                    </div>               
                </div>
				<div class="lookbook-product-content">
					{%- assign id = 0 -%}
					{%- assign j = 1 -%}
					<div class="wpbingo-lookbook__item">
						<div class="lookbook-card">
							<div class="lookbook-image">
								{%- if section.settings.image != blank -%}
									{% include 'img-global' with image: section.settings.image, class: "featured-lookbook__img", effect: "fade-in" %}
								{%- else -%}
									<img class="lazyload fade-in" src="https://placehold.jp/583x680.png" width="583" height="680" />
								{%- endif -%}
							</div>
							{%- for block in section.blocks -%}
								{% if block.type == 'item' %}
									{%- assign name_pin = block.settings.name_pin -%}
									{%- assign product_handle = block.settings.product -%}
									{%- assign top = block.settings.top -%}
									{%- assign left = block.settings.left -%}
									{% if name_pin == "lookbook_1" %}
										<div class="lookbook-card__item" style="top: {{ top }}%; left: {{ left }}%;">
											<div class="lookbook-card__point">
												<div class="lookbook-card__button">
													<button class="lookbook-card__btn" data-toggle="modal" data-target="lookbook-{{ section.id }}-{{ id }}">
														<span>{{ j }}</span>
													</button>
												</div>
											</div>
										</div>
										{%- assign j = j | plus: 1 -%}
										{%- assign id = id | plus: 1 -%}
									{%- endif -%}
								{%- endif -%}
							{%- endfor -%}
						</div>
					</div>
                </div>
			</div>
		</div>
	</div>
    {%- assign id = 0 -%}
	{%- for block in section.blocks -%}
		{% if block.type == 'item' %}
			{%- assign name_pin = block.settings.name_pin -%}
			{%- assign product_handle = block.settings.product -%}
			{%- assign alignment = block.settings.display -%}
			{%- render 'lookbook-item', product: all_products[product_handle], alignment: alignment, id: id -%}
			{%- assign id = id | plus: 1 -%}
		{%- endif -%}
	{%- endfor -%}
</section>
